<UserControl x:Class="ChatClient.Resources.BeginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatClient.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF0E2B5D" Offset="1"/>
                <GradientStop Color="#FE070E18" Offset="0.276"/>
                <GradientStop Color="#FE021026" Offset="0.532"/>
                <GradientStop Color="#FE0A1E3D" Offset="0.776"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Name="LoginButton" Content="Войти" Background="#FF399393" Click="LoginButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="50" Margin="0,0,0,80"/>
        <Button Name="RegisterButton" Content="Регистрация" Background="#FF399393" Click="RegisterButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="50" Margin="0,80,0,0"/>
    </Grid>
</UserControl>
