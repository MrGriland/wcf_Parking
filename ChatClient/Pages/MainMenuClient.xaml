<UserControl x:Class="ChatClient.Pages.MainMenuClient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatClient.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <Grid>
        <StackPanel Background="DarkSlateGray">
            <Label Content="Вы вошли как: Name" HorizontalAlignment="Center" Margin="0 10 0 0" VerticalAlignment="Top"></Label>
            <Label Content="Осталось мест: 00" HorizontalAlignment="Center"  Margin="0 10 0 0" VerticalAlignment="Top"></Label>
            <Button Name="MainButton" Background="AliceBlue" Content="Главная"  Margin="0 10 0 0" VerticalAlignment="Center"></Button>
            <Button Name="AddButton" Background="AliceBlue" Content="Забронировать"  Margin="0 10 0 0" VerticalAlignment="Center"></Button>
            <Button Name="NotificationsButton" Background="AliceBlue" Content="Уведомления"  Margin="0 10 0 0" VerticalAlignment="Center"></Button>
            <Button Name="LogoutButton" Background="AliceBlue" Content="Выйти"  Margin="0 10 0 0" VerticalAlignment="Center"></Button>
        </StackPanel>
    </Grid>
</UserControl>
